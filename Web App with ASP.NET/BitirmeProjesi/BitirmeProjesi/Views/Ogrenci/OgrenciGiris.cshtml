@model BitirmeProjesi.Models.Entity.TBLOgrenciler

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=, initial-scale=1.0">
    <title>Öğrenci Giriş</title>
    <link rel="stylesheet" type="text/css" href="~/Content/ogrencigirisekrani.css">
    <link rel="icon" href="icons/logorgb.png">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">


</head>


<body>


    <h1 style="text-align:center;  font-size: 60px;"> <i class="fas fa-graduation-cap"></i> Öğrenci Girişi</h1>


    <div class="form">
        <div class="tab-header">
            <!-- header oluşturuluyor-->
            <div class="active">Giriş Yap</div> <!--Kayıt olma ve giriş yapma seçenekleri -->
            <div>Kaydol</div>
        </div>
        <div class="tab-content">
            <!-- bu tabların içerikleri-->
            <div class="tab-body active">
                <div class="form-element">
                    <!-- Girişin form elementleri tanımlanıyor-->
                    @using (Html.BeginForm("OgrenciGiris", "Ogrenci", FormMethod.Post))
                    {
                        <input type="text" style="margin-top:5px;" placeholder="Email " name="MAIL">
                        <input type="password" style="margin-top:5px;" placeholder="Parola" name="SIFRE">
                        <button type="submit" style="margin-top:5px;">GİRİŞ YAP</button> <!-- Giriş yap butonu-->
                    }
                    </div>
            </div>
           
            <div class="tab-body">
                <div class="form-element">
                        @using (Html.BeginForm("OgrenciKaydol", "Ogrenci", FormMethod.Post)) {
                        <!-- kaydolun form elementleri tanımlanıyor-->
                        <input type="text" style="margin-top:5px;" placeholder="Ad / Soyad" name="ISIM">
                        <input type="email" style="margin-top:5px;" placeholder="Email" name="MAIL">
                        <input type="text" style="margin-top:5px;" placeholder="Parola" name="SIFRE">
                        <input type="text" style="margin-top:5px;" placeholder="Telefon" name="TELEFON">
                        <input type="text" style="margin-top:5px;" placeholder="Bölüm" name="BOLUM">
                        <input type="text" style="margin-top:5px;" placeholder="Adres" name="ADRES">
                        <button type="submit">Kaydol</button>  <!-- Kayıt Ol butonu-->
                        }
                   
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/scripts/ogrencigirisekrani.js"></script>
</body>
</html>
